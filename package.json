{
  "name": "test-coverage-report",
  "version": "0.0.4",
  "private": true,
  "description": "Github Action to Report Test Coverage on Pull Request",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "all": "npm run format-check && npm run lint && npm run test:coverage && npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fsancheztemprano/test-coverage-report.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "test",
    "coverage",
    "jacoco",
    "lcov",
    "report"
  ],
  "author": "Francisco SÃ¡nchez",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "@connectis/coverage-parser": "1.0.8",
    "@frango9000/html-builder": "0.0.4",
    "fast-glob": "3.2.12"
  },
  "devDependencies": {
    "@octokit/types": "9.0.0",
    "@types/jest": "29.4.0",
    "@types/node": "18.13.0",
    "@typescript-eslint/parser": "5.51.0",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.38.0",
    "eslint-plugin-github": "4.6.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.4.2",
    "js-yaml": "4.1.0",
    "prettier": "2.8.4",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  }
}
