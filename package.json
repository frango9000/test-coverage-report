{
  "name": "test-coverage-report",
  "version": "0.0.3",
  "private": true,
  "description": "Github Action to Report Test Coverage on Pull Request",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "all": "npm run format && npm run lint && npm run test:coverage && npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fsancheztemprano/test-coverage-report.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "test",
    "coverage",
    "jacoco",
    "lcov",
    "report"
  ],
  "author": "Francisco SÃ¡nchez",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.8.2",
    "@actions/github": "5.0.3",
    "@connectis/coverage-parser": "1.0.8",
    "@frango9000/html-builder": "0.0.3",
    "fast-glob": "3.2.11"
  },
  "devDependencies": {
    "@octokit/types": "6.34.0",
    "@types/jest": "27.5.1",
    "@types/node": "18.11.12",
    "@typescript-eslint/parser": "5.23.0",
    "@vercel/ncc": "0.33.4",
    "eslint": "8.15.0",
    "eslint-plugin-github": "4.3.6",
    "eslint-plugin-jest": "26.2.2",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "js-yaml": "4.1.0",
    "prettier": "2.6.2",
    "ts-jest": "27.1.4",
    "typescript": "4.6.4"
  }
}
